# Copy to .env and adjust as needed
# If not set, the app falls back to SQLite (cmp.db)
DATABASE_URL=postgresql+psycopg://cmp:cmp@localhost:5432/cmp
ENV=development

# Zoho Books API Configuration
# Get these from https://api-console.zoho.com/
ZOHO_CLIENT_ID=your_zoho_client_id_here
ZOHO_CLIENT_SECRET=your_zoho_client_secret_here
ZOHO_ACCESS_TOKEN=your_zoho_access_token_here
ZOHO_REFRESH_TOKEN=your_zoho_refresh_token_here
ZOHO_ORGANIZATION_ID=your_zoho_organization_id_here
ZOHO_BASE_URL=https://www.zohoapis.com/books/v3  # Change for different regions

# Emirates NBD API Souq Configuration (Real UAE Bank API)
# Apply for access at https://developer.emiratesnbd.com/
EMIRATES_NBD_API_KEY=your_emirates_nbd_api_key_here
EMIRATES_NBD_CLIENT_ID=your_emirates_nbd_client_id_here
EMIRATES_NBD_ACCOUNT_NUMBER=your_emirates_nbd_account_number_here
EMIRATES_NBD_BASE_URL=https://api.emiratesnbd.com/v1

# Bank file import configuration (for banks without APIs like Wio Bank)
BANK_IMPORT_DIRECTORY=local_storage/bank_statements

# Legacy configuration (now using file import for Wio Bank)
WIO_ACCOUNT_NUMBER=your_wio_account_number_for_identification

# API Rate Limiting
API_RATE_LIMIT=100  # requests per minute
API_TIMEOUT=30      # seconds
